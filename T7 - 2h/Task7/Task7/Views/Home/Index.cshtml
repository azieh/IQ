@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-lg-10 col-lg-offset-1 text-center">
            <button class="btn-primary" data-bind="click: getUsdAndEurExchangeRates">Get exchange rates</button>
        </div>
    </div>
    <div data-bind="with: exchangeRatesListModel">
        <div data-bind="text: urlResponse"></div>
        <div class="row" data-bind="visible: exchangeRatesList().length > 0">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Currency name:</th>
                    <th>Exchange rate:</th>
                </tr>
                </thead>
                <tbody data-bind="foreach: exchangeRatesList">
                <tr>
                    <td data-bind="text: name"></td>
                    <td data-bind="text: value"></td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>